{
  "compilerOptions": {
    "lib": ["es2019", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "./*.ts",
    "./routes/*.ts",
    "./models/*.ts",
    "./migrations/*ts",
    "./resources/*.tsx",
    "./resources/**/*.tsx"
  ]
}
